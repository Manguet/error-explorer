<section class="cta">
    <div class="cta__container">
        <div class="cta__background">
            <div class="cta__background-grid"></div>
            <div class="cta__background-particles">
                <div class="cta__particle cta__particle--1"></div>
                <div class="cta__particle cta__particle--2"></div>
                <div class="cta__particle cta__particle--3"></div>
                <div class="cta__particle cta__particle--4"></div>
            </div>
            <div class="cta__background-glow"></div>
        </div>

        <div class="cta__content">
            <header class="cta__header">
                <div class="cta__badge">
                    <div class="cta__badge-dot"></div>
                    <span class="cta__badge-text">Sécurité Maximale</span>
                </div>

                <h2 class="cta__title">
                    Votre application est-elle
                    <span class="cta__title-highlight">vraiment sécurisée</span> ?
                </h2>

                <p class="cta__description">
                    <strong>75% des bugs critiques</strong> passent inaperçus sans monitoring professionnel.<br>
                </p>
            </header>

            <div class="cta__demo">
                <div class="cta__demo-header">
                    <h3 class="cta__demo-title">Score de Sécurité</h3>
                    <div class="cta__demo-status">
                        <div class="cta__demo-status-dot"></div>
                        <span>Analyse en cours...</span>
                    </div>
                </div>

                <div class="cta__security-gauge">
                    <div class="cta__gauge-container">
                        <svg class="cta__gauge-svg" viewBox="0 0 200 120">
                            <path class="cta__gauge-background"
                                  d="M 20 100 A 80 80 0 0 1 180 100"
                                  fill="none"
                                  stroke="rgba(255,255,255,0.1)"
                                  stroke-width="12"/>

                            <path class="cta__gauge-progress"
                                  d="M 20 100 A 80 80 0 0 1 180 100"
                                  fill="none"
                                  stroke-width="12"
                                  stroke-linecap="round"
                                  stroke-dasharray="251.2"
                                  stroke-dashoffset="251.2"/>

                            <circle class="cta__gauge-center" cx="100" cy="100" r="45" fill="rgba(255,255,255,0.05)"/>
                        </svg>

                        <div class="cta__gauge-content">
                            <div class="cta__score-value">0</div>
                            <div class="cta__score-label">Score de Sécurité</div>
                        </div>
                    </div>

                    <div class="cta__gauge-legend">
                        <div class="cta__legend-item cta__legend-item--danger">
                            <div class="cta__legend-color"></div>
                            <span>Critique (0-30)</span>
                        </div>
                        <div class="cta__legend-item cta__legend-item--warning">
                            <div class="cta__legend-color"></div>
                            <span>Moyen (31-70)</span>
                        </div>
                        <div class="cta__legend-item cta__legend-item--success">
                            <div class="cta__legend-color"></div>
                            <span>Excellent (71-100)</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="cta__features">
                <h3 class="cta__features-title">Protection Incluse</h3>
                <div class="cta__features-grid">
                    <div class="cta__feature" data-delay="0">
                        <div class="cta__feature-icon">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z"/>
                                <line x1="12" y1="9" x2="12" y2="13"/>
                                <line x1="12" y1="17" x2="12.01" y2="17"/>
                            </svg>
                        </div>
                        <span class="cta__feature-text">Détection automatique des erreurs</span>
                        <div class="cta__feature-check">✓</div>
                    </div>

                    <div class="cta__feature" data-delay="100">
                        <div class="cta__feature-icon">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4z"/>
                                <line x1="3" y1="6" x2="21" y2="6"/>
                                <path d="M16 10a4 4 0 0 1-8 0"/>
                            </svg>
                        </div>
                        <span class="cta__feature-text">Alertes en temps réel</span>
                        <div class="cta__feature-check">✓</div>
                    </div>

                    <div class="cta__feature" data-delay="200">
                        <div class="cta__feature-icon">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <polyline points="22,12 18,12 15,21 9,3 6,12 2,12"/>
                            </svg>
                        </div>
                        <span class="cta__feature-text">Analytics avancés et métriques</span>
                        <div class="cta__feature-check">✓</div>
                    </div>

                    <div class="cta__feature" data-delay="300">
                        <div class="cta__feature-icon">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <polyline points="16 18 22 12 16 6"/>
                                <polyline points="8 6 2 12 8 18"/>
                            </svg>
                        </div>
                        <span class="cta__feature-text">Stack trace détaillé</span>
                        <div class="cta__feature-check">✓</div>
                    </div>

                    <div class="cta__feature" data-delay="400">
                        <div class="cta__feature-icon">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
                                <polyline points="22,6 12,13 2,6"/>
                            </svg>
                        </div>
                        <span class="cta__feature-text">Intégrations Slack et email</span>
                        <div class="cta__feature-check">✓</div>
                    </div>

                    <div class="cta__feature" data-delay="500">
                        <div class="cta__feature-icon">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <rect x="3" y="3" width="18" height="18" rx="2" ry="2"/>
                                <circle cx="9" cy="9" r="2"/>
                                <path d="M21 15l-3.086-3.086a2 2 0 0 0-2.828 0L6 21"/>
                            </svg>
                        </div>
                        <span class="cta__feature-text">Dashboard moderne et intuitif</span>
                        <div class="cta__feature-check">✓</div>
                    </div>
                </div>
            </div>

            <div class="cta__action">
                <a href="{{ path('app_register') }}" class="cta__button">
                    <span class="cta__button-text">Améliorer mon score maintenant</span>
                    <div class="cta__button-icon">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <polyline points="22,12 18,12 15,21 9,3 6,12 2,12"/>
                        </svg>
                    </div>
                    <div class="cta__button-shine"></div>
                </a>

                <div class="cta__action-meta">
                    <div class="cta__action-guarantee">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M9 12l2 2 4-4"/>
                            <path d="M21 12c.552 0 1-.448 1-1V5c0-.552-.448-1-1-1H3c-.552 0-1 .448-1 1v6c0 .552.448 1 1 1h9l4 4-1-4z"/>
                        </svg>
                        <span>Configuration en 2 minutes</span>
                    </div>
                    <div class="cta__action-trial">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <circle cx="12" cy="12" r="10"/>
                            <polyline points="12,6 12,12 16,14"/>
                        </svg>
                        <span>14 jours gratuits</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
