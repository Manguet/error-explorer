        function generateComparisonData() {
            const projects = ['Projet A', 'Projet B', 'Projet C', 'Projet D'];
            const metrics = ['Performance', 'Stabilit√©', 'S√©curit√©', 'Maintenabilit√©', 'Fiabilit√©'];
            
            return {
                labels: metrics,
                datasets: projects.map((project, index) => ({
