{% extends 'layout/base.html.twig' %}

{% block title %}Inscription - Error Explorer{% endblock %}
{% block description %}Créez votre compte Error Explorer gratuitement et commencez à surveiller vos applications dès maintenant.{% endblock %}
{% block keywords %}inscription, créer compte, monitoring gratuit, error explorer, surveillance application{% endblock %}
{% block robots %}noindex, nofollow{% endblock %}

{% block body_attributes %} class="auth-page register-page"{% endblock %}

{% block body %}
    <!-- Lien de retour -->
    <a href="{{ path('home') }}" class="back-link" data-tooltip="Retour à l'accueil">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M19 12H5M12 19l-7-7 7-7"/>
        </svg>
        <span>Retour à l'accueil</span>
    </a>

    <!-- Container principal -->
    <div class="auth-container register-container">
        <!-- Header avec branding -->
        <div class="auth-header">
            <div class="hero-badge">
                <div class="badge-dot"></div>
                <span>Essai gratuit • Sans engagement</span>
            </div>

            <h1 class="auth-title">Error Explorer</h1>
            <p class="auth-subtitle">Créez votre compte en moins de 2 minutes</p>
        </div>

        <!-- Formulaire d'inscription -->
        <div class="auth-form-container register-form-container">
            <!-- Affichage des messages flash -->
            {% for message in app.flashes('error') %}
                <div class="alert alert-error" role="alert">
                    <div class="alert-icon">❌</div>
                    <div class="alert-content">
                        <strong>Erreur</strong>
                        <span>{{ message }}</span>
                    </div>
                </div>
            {% endfor %}

            {% for message in app.flashes('success') %}
                <div class="alert alert-success" role="alert">
                    <div class="alert-icon">✅</div>
                    <div class="alert-content">
                        <strong>Succès</strong>
                        <span>{{ message }}</span>
                    </div>
                </div>
            {% endfor %}

            {{ form_start(registrationForm, {'attr': {'novalidate': 'novalidate'}}) }}

            <!-- Section : Informations personnelles -->
            <div class="form-section">
                <h3 class="form-section-title">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/>
                        <circle cx="12" cy="7" r="4"/>
                    </svg>
                    Informations personnelles
                </h3>

                <div class="form-row">
                    <div class="form-group">
                        {{ form_label(registrationForm.firstName, null, {'label_attr': {'class': 'form-label'}}) }}
                        <div class="form-label-icon">
                            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/>
                                <circle cx="12" cy="7" r="4"/>
                            </svg>
                        </div>
                        <div class="input-wrapper">
                            {{ form_widget(registrationForm.firstName) }}
                            <div class="input-focus-ring"></div>
                        </div>
                        <div class="form-error" id="firstNameError">
                            {{ form_errors(registrationForm.firstName) }}
                        </div>
                    </div>

                    <div class="form-group">
                        {{ form_label(registrationForm.lastName, null, {'label_attr': {'class': 'form-label'}}) }}
                        <div class="form-label-icon">
                            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/>
                                <circle cx="12" cy="7" r="4"/>
                            </svg>
                        </div>
                        <div class="input-wrapper">
                            {{ form_widget(registrationForm.lastName) }}
                            <div class="input-focus-ring"></div>
                        </div>
                        <div class="form-error" id="lastNameError">
                            {{ form_errors(registrationForm.lastName) }}
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(registrationForm.email, null, {'label_attr': {'class': 'form-label'}}) }}
                    <div class="form-label-icon">
                        <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
                            <polyline points="22,6 12,13 2,6"/>
                        </svg>
                    </div>
                    <div class="input-wrapper">
                        {{ form_widget(registrationForm.email) }}
                        <div class="input-focus-ring"></div>
                    </div>
                    <div class="form-error" id="emailError">
                        {{ form_errors(registrationForm.email) }}
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(registrationForm.company, 'Entreprise <span class="optional">(optionnel)</span>'|raw, {'label_attr': {'class': 'form-label'}}) }}
                    <div class="form-label-icon">
                        <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M3 21h18M5 21V7l6-4 6 4v14M10 12h4"/>
                        </svg>
                    </div>
                    <div class="input-wrapper">
                        {{ form_widget(registrationForm.company) }}
                        <div class="input-focus-ring"></div>
                    </div>
                </div>
            </div>

            <!-- Section : Sécurité -->
            <div class="form-section">
                <h3 class="form-section-title">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <rect x="3" y="11" width="18" height="11" rx="2" ry="2"/>
                        <circle cx="12" cy="16" r="1"/>
                        <path d="M7 11V7a5 5 0 0 1 10 0v4"/>
                    </svg>
                    Sécurité de votre compte
                </h3>

                <div class="form-row">
                    <div class="form-group">
                        {{ form_label(registrationForm.plainPassword.first, null, {'label_attr': {'class': 'form-label'}}) }}
                        <div class="form-label-icon">
                            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <rect x="3" y="11" width="18" height="11" rx="2" ry="2"/>
                                <circle cx="12" cy="16" r="1"/>
                                <path d="M7 11V7a5 5 0 0 1 10 0v4"/>
                            </svg>
                        </div>
                        <div class="input-wrapper">
                            {{ form_widget(registrationForm.plainPassword.first, {'attr': {'id': 'password'}}) }}
                            <button type="button" class="password-toggle" aria-label="Afficher/masquer le mot de passe">
                                <svg class="eye-open" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"/>
                                    <circle cx="12" cy="12" r="3"/>
                                </svg>
                                <svg class="eye-closed" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="display: none;">
                                    <path d="M17.94 17.94A10.07 10.07 0 0 1 12 20c-7 0-11-8-11-8a18.45 18.45 0 0 1 5.06-5.94M9.9 4.24A9.12 9.12 0 0 1 12 4c7 0 11 8 11 8a18.5 18.5 0 0 1-2.16 3.19m-6.72-1.07a3 3 0 1 1-4.24-4.24"/>
                                    <line x1="1" y1="1" x2="23" y2="23"/>
                                </svg>
                            </button>
                            <div class="input-focus-ring"></div>
                        </div>
                        <div class="password-strength" id="passwordStrength">
                            <div class="strength-bar">
                                <div class="strength-fill"></div>
                            </div>
                            <span class="strength-text">Minimum 8 caractères</span>
                        </div>
                        <div class="form-error" id="passwordError">
                            {{ form_errors(registrationForm.plainPassword.first) }}
                        </div>
                    </div>

                    <div class="form-group">
                        {{ form_label(registrationForm.plainPassword.second, null, {'label_attr': {'class': 'form-label'}}) }}
                        <div class="form-label-icon">
                            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M9 12l2 2 4-4M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                            </svg>
                        </div>
                        <div class="input-wrapper">
                            {{ form_widget(registrationForm.plainPassword.second, {'attr': {'id': 'confirm_password'}}) }}
                            <div class="password-match-indicator" id="passwordMatch"></div>
                            <div class="input-focus-ring"></div>
                        </div>
                        <div class="form-error" id="confirmPasswordError">
                            {{ form_errors(registrationForm.plainPassword.second) }}
                        </div>
                    </div>
                </div>
            </div>

            <!-- Section : Sélection du plan -->
            <div class="form-section">
                <h3 class="form-section-title">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="12" cy="12" r="3"/>
                        <path d="M12 1v6m0 6v6m11-7h-6m-6 0H1"/>
                    </svg>
                    Choisissez votre plan
                </h3>

                <div class="plan-selector">
                    <div class="plan-options">
                        {% for plan in all_plans %}
                            <div class="plan-option {{ plan.id == selected_plan.id ? 'selected' : '' }}{{ plan.isPopular ? ' popular' : '' }}"
                                 data-plan-id="{{ plan.id }}">

                                <input type="radio"
                                       name="{{ registrationForm.plan.vars.full_name }}"
                                       value="{{ plan.id }}"
                                       id="plan_{{ plan.id }}"
                                        {{ plan.id == selected_plan.id ? 'checked' : '' }}
                                       style="display: none;">

                                {% if plan.isPopular %}
                                    <div class="plan-popular-badge">
                                        <svg width="12" height="12" viewBox="0 0 24 24" fill="currentColor">
                                            <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                                        </svg>
                                        Populaire
                                    </div>
                                {% endif %}

                                <div class="plan-details">
                                    <div class="plan-header">
                                        <h4 class="plan-name">{{ plan.name }}</h4>
                                        <div class="plan-price">
                                            {% if plan.isFree %}
                                                <span class="price-free">Gratuit</span>
                                            {% else %}
                                                <span class="price-amount">{{ plan.formattedPriceMonthly }}</span>
                                                <span class="price-period">/mois</span>
                                            {% endif %}
                                        </div>
                                    </div>

                                    <div class="plan-features">
                                        <div class="plan-metrics">
                                                <span class="metric">
                                                    <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                        <rect x="3" y="3" width="18" height="18" rx="2" ry="2"/>
                                                        <rect x="7" y="7" width="3" height="9"/>
                                                        <rect x="14" y="7" width="3" height="5"/>
                                                    </svg>
                                                    {{ plan.maxProjectsLabel }} projets
                                                </span>
                                            <span class="metric">
                                                    <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                        <circle cx="12" cy="12" r="10"/>
                                                        <path d="M12 6v6l4 2"/>
                                                    </svg>
                                                    {{ plan.maxMonthlyErrorsLabel }} erreurs/mois
                                                </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                    <div class="form-error">
                        {{ form_errors(registrationForm.plan) }}
                    </div>
                </div>
            </div>

            <!-- Section : Conditions d'utilisation -->
            <div class="form-section">
                <div class="checkbox-group">
                    {{ form_widget(registrationForm.acceptTerms) }}
                    <label for="{{ registrationForm.acceptTerms.vars.id }}" class="checkbox-label">
                        <div class="checkbox-custom">
                            <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3">
                                <polyline points="20,6 9,17 4,12"/>
                            </svg>
                        </div>
                        <span>
                                J'accepte les <a href="{{ path('cgu') }}" target="_blank" class="terms-link">conditions d'utilisation</a>
                                et la <a href="{{ path('privacy') }}" target="_blank" class="terms-link">politique de confidentialité</a>
                            </span>
                    </label>
                </div>
                <div class="form-error">
                    {{ form_errors(registrationForm.acceptTerms) }}
                </div>
            </div>

            <!-- Bouton de soumission -->
            <div class="form-group">
                {{ form_widget(registrationForm.submit, {
                    'attr': {
                        'class': 'btn btn-primary auth-submit-btn',
                        'id': 'submitBtn'
                    }
                }) }}
            </div>

            {{ form_end(registrationForm) }}

            <!-- Footer avec liens -->
            <div class="auth-footer">
                <div class="auth-separator">
                    <span>ou</span>
                </div>

                <div class="auth-login-prompt">
                    <p>Déjà un compte ?</p>
                    <a href="{{ path('app_login') }}" class="auth-link login-link">
                        <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M15 3h4a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2h-4M10 17l5-5-5-5M21 12H9"/>
                        </svg>
                        <span>Se connecter</span>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Toast notification container -->
    <div id="toast-container" class="toast-container"></div>
{% endblock %}
