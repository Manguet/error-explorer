{# Template pour l'affichage de l'assignation dans le DataTable #}
{% if row.assignedTo %}
    <div class="assignment-info">
        <div class="assignment-avatar">
            {{ row.assignedTo.initials }}
        </div>
        <div class="assignment-details">
            <div class="assignment-name">{{ row.assignedTo.fullName }}</div>
            {% if row.assignedAt %}
                <div class="assignment-date">{{ row.assignedAt|date('d/m H:i') }}</div>
            {% endif %}
        </div>
    </div>
{% else %}
    <div class="assignment-empty">
        <button class="assign-btn" onclick="showAssignmentModal({{ row.id }})" title="Assigner cette erreur">
            <svg width="14" height="14" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
            </svg>
            Assigner
        </button>
    </div>
{% endif %}