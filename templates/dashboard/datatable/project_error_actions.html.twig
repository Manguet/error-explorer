<div class="table-actions">
    {% if row.status == 'open' %}
        <button class="action-btn btn-success" onclick="resolveError({{ row.id }})" title="Résoudre">
            <svg width="14" height="14" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
            </svg>
        </button>
        <button class="action-btn btn-danger" onclick="ignoreError({{ row.id }})" title="Ignorer">
            <svg width="14" height="14" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
            </svg>
        </button>
    {% elseif row.status == 'resolved' or row.status == 'ignored' %}
        <button class="action-btn btn-warning" onclick="reopenError({{ row.id }})" title="Rouvrir">
            <svg width="14" height="14" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
            </svg>
        </button>
    {% endif %}
    
    {% if row.assignedTo %}
        <button class="action-btn btn-info" onclick="showAssignmentModal({{ row.id }})" title="Réassigner">
            <svg width="14" height="14" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
            </svg>
        </button>
    {% else %}
        <button class="action-btn btn-secondary" onclick="showAssignmentModal({{ row.id }})" title="Assigner">
            <svg width="14" height="14" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
            </svg>
        </button>
    {% endif %}
</div>