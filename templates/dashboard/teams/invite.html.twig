{% extends 'dashboard/base.html.twig' %}

{% block title %}Inviter un membre - {{ team.name }} - {{ parent() }}{% endblock %}

{% block breadcrumb_items %}
    <svg width="14" height="14" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
    </svg>
    <a href="{{ path('team_index') }}">Équipes</a>
    <svg width="14" height="14" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
    </svg>
    <a href="{{ path('team_show', {slug: team.slug}) }}">{{ team.name }}</a>
    <svg width="14" height="14" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
    </svg>
    <a href="{{ path('team_members', {slug: team.slug}) }}">Membres</a>
    <svg width="14" height="14" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
    </svg>
    <span>Inviter</span>
{% endblock %}

{% block page_title %}Inviter un membre{% endblock %}
{% block page_subtitle %}Ajouter un nouveau membre à l'équipe {{ team.name }}{% endblock %}

{% block header_actions %}
    <a href="{{ path('team_members', {slug: team.slug}) }}" class="header-btn btn-secondary">
        <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
        </svg>
        Retour aux membres
    </a>
{% endblock %}

{% block body %}
<div class="dashboard-section">
    <div class="projects-create-layout">
        <div class="projects-form-card">
            <div class="projects-form-header">
                <h3 class="form-title">
                    <svg width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                    </svg>
                    Invitation de membre
                </h3>
            </div>
            <div class="projects-form-body">
                {{ form_start(form, {'attr': {'class': 'form-grid'}}) }}
                    <div class="form-group full-width">
                        <label for="{{ form.email.vars.id }}" class="form-label required">
                            {{ form.email.vars.label }}
                        </label>
                        {{ form_widget(form.email, {'attr': {
                            'class': 'form-input',
                            'placeholder': 'ex: membre@example.com',
                            'type': 'email'
                        }}) }}
                        <div class="form-help">
                            L'utilisateur doit déjà avoir un compte sur la plateforme.
                        </div>
                        {{ form_errors(form.email) }}
                    </div>

                    <div class="form-group full-width">
                        <label for="{{ form.role.vars.id }}" class="form-label required">
                            {{ form.role.vars.label }}
                        </label>
                        {{ form_widget(form.role, {'attr': {
                            'class': 'form-input'
                        }}) }}
                        <div class="form-help">
                            Vous pourrez modifier le rôle plus tard si nécessaire.
                        </div>
                        {{ form_errors(form.role) }}
                    </div>

                    <div class="form-group full-width">
                        <label for="{{ form.message.vars.id }}" class="form-label">
                            {{ form.message.vars.label }}
                        </label>
                        {{ form_widget(form.message, {'attr': {
                            'class': 'form-textarea',
                            'placeholder': 'Message de bienvenue...',
                            'rows': 3
                        }}) }}
                        <div class="form-help">
                            Message optionnel qui sera affiché au membre lors de l'ajout.
                        </div>
                        {{ form_errors(form.message) }}
                    </div>

                    <!-- Role Permissions Info -->
                    <div class="dashboard-info-box full-width">
                        <div class="dashboard-info-icon">
                            <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z"/>
                            </svg>
                        </div>
                        <div class="dashboard-info-content">
                            <h4>Permissions par rôle</h4>
                            <div class="permissions-grid">
                                <div class="permission-role">
                                    <h6 class="role-title role-admin">
                                        <svg width="14" height="14" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                                        </svg>
                                        Administrateur
                                    </h6>
                                    <ul>
                                        <li>
                                            <svg width="12" height="12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                                            </svg>
                                            Voir les projets
                                        </li>
                                        <li>
                                            <svg width="12" height="12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                                            </svg>
                                            Modifier les projets
                                        </li>
                                        <li>
                                            <svg width="12" height="12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                                            </svg>
                                            Gérer les membres
                                        </li>
                                        <li>
                                            <svg width="12" height="12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                                            </svg>
                                            Gérer les projets
                                        </li>
                                    </ul>
                                </div>
                                <div class="permission-role">
                                    <h6 class="role-title role-member">
                                        <svg width="14" height="14" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                                        </svg>
                                        Membre
                                    </h6>
                                    <ul>
                                        <li>
                                            <svg width="12" height="12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                                            </svg>
                                            Voir les projets
                                        </li>
                                        <li>
                                            <svg width="12" height="12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                                            </svg>
                                            Modifier les projets
                                        </li>
                                        <li>
                                            <svg width="12" height="12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                                            </svg>
                                            Gérer les membres
                                        </li>
                                        <li>
                                            <svg width="12" height="12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                                            </svg>
                                            Gérer les projets
                                        </li>
                                    </ul>
                                </div>
                                <div class="permission-role">
                                    <h6 class="role-title role-viewer">
                                        <svg width="14" height="14" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 616 0z"/>
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                                        </svg>
                                        Visualisateur
                                    </h6>
                                    <ul>
                                        <li>
                                            <svg width="12" height="12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                                            </svg>
                                            Voir les projets
                                        </li>
                                        <li>
                                            <svg width="12" height="12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                                            </svg>
                                            Modifier les projets
                                        </li>
                                        <li>
                                            <svg width="12" height="12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                                            </svg>
                                            Gérer les membres
                                        </li>
                                        <li>
                                            <svg width="12" height="12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                                            </svg>
                                            Gérer les projets
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Warning for limit reached -->
                    {% if not team.canAddMember() %}
                        <div class="dashboard-info-box full-width" style="background: rgba(239, 68, 68, 0.05); border-color: rgba(239, 68, 68, 0.1);">
                            <div class="dashboard-info-icon" style="background: rgba(239, 68, 68, 0.1); color: #dc2626;">
                                <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.082 16.5C3.312 18.333 4.274 20 5.814 20z"/>
                                </svg>
                            </div>
                            <div class="dashboard-info-content">
                                <h4>Limite de membres atteinte</h4>
                                <p>Cette équipe a atteint son nombre maximum de membres ({{ team.maxMembers }}). 
                                Vous devez d'abord retirer un membre ou augmenter la limite dans les paramètres de l'équipe.</p>
                            </div>
                        </div>
                    {% endif %}

                    <div class="form-actions full-width">
                        <a href="{{ path('team_members', {slug: team.slug}) }}" class="header-btn btn-secondary">
                            Annuler
                        </a>
                        <button type="submit" class="header-btn btn-primary" {% if not team.canAddMember() %}disabled{% endif %}>
                            <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                            </svg>
                            Inviter le membre
                        </button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>

        <div class="projects-preview-sidebar">
            <div class="projects-info-card">
                <div class="info-header">
                    <h3 class="info-title">
                        <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
                        </svg>
                        Statut de l'équipe
                    </h3>
                </div>
                <div class="info-body">
                    <div class="info-items">
                        <div class="info-item info-info">
                            <div class="info-item-title">
                                <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"/>
                                </svg>
                                Membres actuels
                            </div>
                            <div class="info-item-text">{{ team.membersCount }}/{{ team.maxMembers }}</div>
                        </div>

                        <div class="info-item {% if team.canAddMember() %}info-success{% else %}info-warning{% endif %}">
                            <div class="info-item-title">
                                <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                                </svg>
                                Places disponibles
                            </div>
                            <div class="info-item-text">
                                {% if team.canAddMember() %}
                                    {{ team.maxMembers - team.membersCount }} place{{ (team.maxMembers - team.membersCount) > 1 ? 's' : '' }}
                                {% else %}
                                    Aucune place disponible
                                {% endif %}
                            </div>
                        </div>

                        <div class="info-item info-info">
                            <div class="info-item-title">
                                <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
                                </svg>
                                Utilisation
                            </div>
                            <div class="info-item-text">{{ ((team.membersCount / team.maxMembers) * 100)|round }}% de la capacité</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}