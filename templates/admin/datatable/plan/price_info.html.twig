    {% if row.isFree %}
        <div class="price-free">Gratuit</div>
    {% else %}
        <div class="price-monthly">{{ row.formattedPriceMonthly }}/mois</div>
        {% if row.priceYearly %}
            <div class="price-yearly">
                {{ row.formattedPriceYearly }}/an
                {% if row.yearlySavings %}
                    <span class="price-savings">(-{{ row.yearlySavings|number_format(2) }}â‚¬)</span>
                {% endif %}
            </div>
        {% endif %}
    {% endif %}
</div>
